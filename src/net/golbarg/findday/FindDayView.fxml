<BorderPane prefHeight="300.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.golbarg.findday.FindViewController">
   <top>
      <VBox prefHeight="71.0" prefWidth="389.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="70.0" prefWidth="389.0" style="-fx-background-color: lightgray;">
               <children>
                  <Label text="Find Day" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="10.0" minWidth="10.0" prefWidth="10.0" />
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="60.0" minWidth="50.0" prefWidth="60.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="10.0" minWidth="10.0" prefWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="35.0" minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="35.0" minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="35.0" minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="35.0" minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="lblDay" text="Day:" GridPane.columnIndex="1" />
            <Label fx:id="lblMonth" text="Month:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="lblYear" text="Year:" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="txtDay" GridPane.columnIndex="2">
               <font>
                  <Font size="14.0" />
               </font>
               <opaqueInsets>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </opaqueInsets>
               <GridPane.margin>
                  <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
               </GridPane.margin>
            </TextField>
            <TextField fx:id="txtMonth" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <font>
                  <Font size="14.0" />
               </font>
               <opaqueInsets>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </opaqueInsets>
               <GridPane.margin>
                  <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
               </GridPane.margin>
            </TextField>
            <TextField fx:id="txtyear" GridPane.columnIndex="2" GridPane.rowIndex="2">
               <font>
                  <Font size="14.0" />
               </font>
               <opaqueInsets>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </opaqueInsets>
               <GridPane.margin>
                  <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
               </GridPane.margin>
            </TextField>
            <Button fx:id="btnFindDay" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="30.0" text="Find" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets left="5.0" right="5.0" />
               </GridPane.margin>
            </Button>
            <Label fx:id="lblResult" text="Name of Day" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="4">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </GridPane>
   </center>
</BorderPane>
